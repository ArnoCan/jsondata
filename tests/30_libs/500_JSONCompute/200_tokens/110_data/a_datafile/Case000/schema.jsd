{
	"$schema": "http://json-schema.org/draft-03/schema",
	"type":"object",
	"required":false,
	"properties":{
		"stock": {
			"type":"object",
			"required":true,
			"properties":{
				"total": {
					"type":"number",
					"required":true
				}
			}
		},
		"locations": {
			"type":"array",
			"required":true,
			"items":
			{
			"location": {
				"type":"object",
				"required":true,
				"properties":{
					"city": {
						"type":"string",
						"required":true
					},
					"local": {
						"type":"number",
						"required":true
					},
					"products": {
						"type":"array",
						"required":true,
						"items":
						{
							"product": {
								"type":"object",
								"required":true,
								"properties":{
									"name": {
										"type":"string",
										"required":true
									},
									"quantity": {
										"type":"number",
										"required":true
									},
									"color": {
										"type":"string",
										"required":true
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
